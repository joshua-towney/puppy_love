
<header class="profile_header">
    <h1>Your Chosen Puppy is...</h1> 
    <h1>&hearts;&hearts;&hearts;<%=dog['name']%>&hearts;&hearts;&hearts;</h1>
</header>

<form action="/dogs/<%=dog['id']%>" method="post">

    <input type="hidden" name="_method" value="delete">

    <section class="profile_main_block">
        <div class="profile_left">
            <img src="<%=dog['image_url']%>">
        </div>
        <div class="profile_right">
            <h2>Age: <%=dog['age']%></h2>
            <h2>Location: <%=dog['location']%></h2>
            <h2>Likes: <%=dog['likes']%></h2>
            <h2>Dislikes: <%=dog['dislikes']%></h2>
            <h2>Bio: <%=dog['bio']%></h2>
        </div>
    </section>

    <%if session[:user_id] == dog['user_id']%>
        <a href="/dogs/<%=dog['id']%>/edit" class="edit_link"> Edit Puppy Details </a>
        <button>Delete From The Dating Pool</button>
    <%end%>

</form>

&hearts;&hearts;&hearts; 


<%if logged_in?%>

    <form action="/dogs/<%=dog['id']%>" method="post">
        <label>Comment</label>
        <input type="text" onkeypress="return (event.keyCode !== 39) && (event.keyCode !== 34)" name="comment">
        <button>Submit Comment</button>
    </form>

    &hearts;&hearts;&hearts;

    <section class="user_comments">
        <%comments.each do |comment|%>
            <h3><%=comment['user_name']%> : '<%=comment['comment']%>'</h3>
        <%end%>
    </section>

    <button class="like_dislike">&#129460;</button>
    &hearts;
    <button class="like_dislike">&#128049;</button>

<%end%>

